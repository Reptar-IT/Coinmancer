<% include ../templates/head %>

<section>
  <% include ../templates/header %>
</section>


<section>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <br>
        <h5>Deposit</h5>


        <table width="80%" style="padding: 10;" align=center border=0>
          <tr>
            <td colspan=2 align=center>
              <h4>
                <font face=Verdana>Specify amount to deposit in USD value:</font>
              </h4>
            </td>
          </tr>
          <tr>
            <td height=20 colspan=2></td>
          </tr>
          <tr align=center>
            <form action="depositbtc" method="POST">
              <td width="50%" align=right><select style="width: 80px;" id=currencyList class=form-control onchange="onChangeCurrency()">
                  <option value=1>USD</option>
                </select></td>
              <td width="50%" align=left style="vertical-align: top; padding-left: 15px"><input class=form-control style="width: 100px" type=text onkeyup="handleKeyAmount(event.keyCode);" step=.01 name="amt" id="amt">
                <input type=hidden id=rechargeAmountMinimumAllowed name=rechargeAmountMinimumAllowed value=3.15>
              </td>
          </tr>
          <tr>
            <td height=20 colspan=2></td>
          </tr>
          <tr align=center>
            <td width="100%" colspan=2>
              <div id=estimated_usd_value></div><input type=hidden id=XBTUSDVALUE value=6298.4125>
            </td>
          </tr>
          <tr>
            <td height=20 colspan=2></td>
          </tr>
          <tr>
            <td colspan=2 align=center id=transferFee style="display: none;"></td>
          </tr>
          <tr>
            <td colspan=2 align=center id=recommendAmount></td>
          </tr>
          <tr>
            <td colspan=2 align=center>
              <button type=submit class="btn btn-blue ladda-button" style="min-width: 200px" data-style=expand-right>
                <span class=ladda-label>Deposit Bitcoin</span> <span class=ladda-spinner></span>
              </button>
              </form>
              <br><br>

            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

</section>

<% include ../templates/footer %>
