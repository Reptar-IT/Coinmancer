<% include ../templates/head %>

<section>
  <% include ../templates/header %>
</section>

<section>
  <div class="gatekeeper">
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <form class="form-signin" action="/login" method="post" autocomplete="off">
              <img class="form-logo" src="/images/logo.png" alt="logo">
              <div class="input-icon-wrap top-input">
                <span class="input-icon">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" class="input-with-icon" name="username" placeholder="Email" autocomplete="off" required>
              </div>
              <div class="input-icon-wrap btm-input">
                <span class="input-icon">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="input-with-icon" name="password" placeholder="Password" autocomplete="off" required>
              </div>

              <div class="checkbox-wrapper">
                <div class="checkbox mb-3">
                  <label class="checkbox-label">
                    <input type="checkbox" value="remember-me"> <small>Keep me signed in</small>
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" value="remember-me"> <small>Remember me</small>
                  </label>
                </div>
              </div>

              <button class="login-btn btn btn-sm btn-primary btn-block" type="submit">Login</button>
            </form>
            <div class="">
              <small><a href="/reset">I forgot my password</a></small>
            </div>
            <div class="">
              <small>Not yet registered? <a href="/register">Create an account</a></small>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <h1 class="social-sign-in-head">Sign In With</h1>
          <div class="card-body">
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Facebook
            </a>
            <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
              <i class="fab fa-github"></i>
              Github
            </a>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Google
            </a>
            <!-- <a class="btn btn-block btn-social btn-twitter" href="/auth/twitter" role="button">
              <i class="fab fa-twitter"></i>
              Twitter
            </a> -->
            <!-- <a class="btn btn-block btn-social btn-linkedin" href="/auth/linkedin" role="button">
              <i class="fab fa-linkedin"></i>
              LinkedIn
            </a>
            <a class="btn btn-block btn-social btn-reddit" href="/auth/reddit" role="button">
              <i class="fab fa-reddit"></i>
              Reddit
            </a> -->
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<% include ../templates/footer %>
