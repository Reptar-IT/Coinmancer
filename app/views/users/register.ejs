<% include ../templates/head %>

<section>
  <% include ../templates/header %>
</section>

<section>
  <div class="gatekeeper">
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <form class="form-signin" action="/register" method="post">
              <img class="form-logo" src="/images/logo.png" alt="logo">
              <div class="input-icon-wrap top-input">
                <span class="input-icon">
                  <i class="fas fa-signature"></i>
                </span>
                <input type="text" class="input-with-icon" name="fName" placeholder="First Name" autocomplete="off" required autofocus>
              </div>

              <div class="input-icon-wrap btm-input">
                <span class="input-icon">
                  <i class="fas fa-signature"></i>
                </span>
                <input type="text" class="input-with-icon" name="lName" placeholder="Last Name" autocomplete="off" required>
              </div>

              <div class="input-icon-wrap top-input">
                <span class="input-icon">
                  <i class="fas fa-mask"></i>
                </span>
                <input type="text" class="input-with-icon" name="alias" placeholder="Username" autocomplete="off" required>
              </div>

              <div class="input-icon-wrap top-input">
                <span class="input-icon">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" class="input-with-icon" name="username" placeholder="Email" autocomplete="off" required>
              </div>

              <div class="input-icon-wrap btm-input">
                <span class="input-icon">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="input-with-icon" name="password" placeholder="Password" autocomplete="off" required>
              </div>

              <div class="input-icon-wrap btm-input">
                <span class="input-icon">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="input-with-icon" name="passwordConfirmation" placeholder="Confirm Password" autocomplete="off" required>
              </div>

              <div class="radio-wrapper">
                <small>
                  <label class="radio-label radio-inline"><input type="radio" name="profession" value="freelancer" checked>Freelancer</label>
                  <label class="radio-label radio-inline"><input type="radio" name="profession" value="employer">Employer</label>
                  <label class="radio-label radio-inline"><input type="radio" name="profession" value="project-manager">Both</label>
                </small>
              </div>
              <div class="checkbox-wrapper">
                <div class="checkbox mb-3">
                  <label class="checkbox-label">
                    <input type="checkbox" value="accepted"> <small class="text-muted">I agree to Terms of Use and Privacy Policy</small>
                  </label>
                </div>
              </div>
              <button class="register-btn btn btn-sm btn-primary btn-block" type="submit">Sign Up </button>
            </form>
            <small class="">Already have an account? <a href="/login">Login here</a></small>
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <h1 class="social-sign-in-head">Sign Up With</h1>
          <div class="card-body">
            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
              <i class="fab fa-facebook"></i>
              Facebook
            </a>
            <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
              <i class="fab fa-github"></i>
              Github
            </a>
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Google
            </a>
            <!-- <a class="btn btn-block btn-social btn-twitter" href="/auth/twitter" role="button">
              <i class="fab fa-twitter"></i>
              Twitter
            </a> -->
            <!-- <a class="btn btn-block btn-social btn-linkedin" href="/auth/linkedin" role="button">
              <i class="fab fa-linkedin"></i>
              LinkedIn
            </a>
            <a class="btn btn-block btn-social btn-reddit" href="/auth/reddit" role="button">
              <i class="fab fa-reddit"></i>
              Reddit
            </a> -->
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<% include ../templates/footer %>
